<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 角色选择 -->
        <TextView
            android:text="@string/label_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner_character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>

        <!-- 角色等级 -->
        <TextView
            android:text="角色等级"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <SeekBar
            android:id="@+id/seekBar_char_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="8"
            android:progress="8"/> <!-- 默认90级 -->

        <TextView
            android:id="@+id/tv_char_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90"/>

        <!-- 命之座等级 -->
        <TextView
            android:text="命之座等级"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner_constellation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/constellation_levels"/>

        <!-- 武器选择 -->
        <TextView
            android:text="@string/label_weapon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner_weapon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- 武器等级 -->
        <TextView
            android:text="武器等级"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <SeekBar
            android:id="@+id/seekBar_weap_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="8"
            android:progress="8"/> <!-- 默认90级 -->

        <TextView
            android:id="@+id/tv_weap_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90"/>

        <!-- 精炼等级 -->
        <TextView
            android:text="精炼等级"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner_refinement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/refinement_levels"/>

        <!-- 天赋等级 -->
        <TextView
            android:text="天赋等级"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <TextView
                android:text="普攻:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"/>

            <Spinner
                android:id="@+id/spinner_normal_attack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/talent_levels"
                android:minWidth="80dp"/>

            <TextView
                android:text="战技:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <Spinner
                android:id="@+id/spinner_skill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/talent_levels"
                android:minWidth="80dp"/>

            <TextView
                android:text="爆发:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <Spinner
                android:id="@+id/spinner_burst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/talent_levels"
                android:minWidth="80dp"/>
        </LinearLayout>

        <!-- 攻击类型 -->
        <TextView
            android:text="攻击类型"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner_attack_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/attack_types"/>

        <!-- 元素反应 -->
        <TextView
            android:text="元素反应"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner_reaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/reaction_types"/>

        <!-- 圣遗物设置按钮 -->
        <Button
            android:id="@+id/btn_artifacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="设置圣遗物"/>

        <!-- 队友增益按钮 -->
        <Button
            android:id="@+id/btn_teammates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="设置队友增益"/>

        <!-- 计算按钮 -->
        <Button
            android:id="@+id/btn_calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/btn_calculate"/>
    </LinearLayout>
</ScrollView>